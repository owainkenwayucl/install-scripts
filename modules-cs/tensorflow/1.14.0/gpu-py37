#%Module -*- tcl -*-
#
# Tensorflow CPU version
#
#                                                      O.K. Jun 2018

proc ModulesHelp { } {

    puts stderr "This module adds the Tensorflow 1.14.0 package to your environment."
    puts stderr ""
    puts stderr "This version is built with GPU support."

}

module-whatis "Adds Tensorflow 1.14.0 to your environment."

prereq cuda-10.0.130-gcc-4.8.5-asayvnq
prereq cudnn-7.4.2-10.0-gcc-4.8.5-a4i5rkx
conflict tensorflow

set           base                 /home/okenway/Applications/tensorflow/1.14.0-37/gpu/
set              root              $base

prepend-path     LD_RUN_PATH       $root/lib
prepend-path     LD_LIBRARY_PATH   $root/lib

prepend-path     PATH              $root/bin
prepend-path     PYTHONPATH        $root/lib/python3.7/site-packages

prepend-path     LD_RUN_PATH       $root/lib64
prepend-path     LD_LIBRARY_PATH   $root/lib64

prepend-path     CPATH             $root/include
prepend-path     INCLUDE_PATH      $root/include

prepend-path CMAKE_PREFIX_PATH $root/venv
