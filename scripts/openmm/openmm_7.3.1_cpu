#!/usr/bin/env bash

###############################################
# Installing 
#
# by Owain Kenway, 2018
#
set -e

for i in ${includes_dir:=$(dirname $0 2>/dev/null)/includes}/{module_maker,require}_inc.sh; do . $i; done

require gcc-libs/4.9.2
require python/3.6.3 
require compilers/gnu/4.9.2 
require fftw/3.3.4-threads/gnu-4.9.2 
require flex/2.5.39 
require bison/3.0.4/gnu-4.9.2 
require ghostscript/9.19/gnu-4.9.2 
require texlive/2015 
require swig/3.0.5/gnu-4.9.2 
require qt/4.8.6/gnu-4.9.2 
require lua/5.3.1 
require perl/5.22.0 
require graphviz/2.40.1 
require doxygen/1.8.14

NAME=${NAME:-openmm}
VERSION=${VERSION:-7.3.1}
INSTALL_PREFIX=${INSTALL_PREFIX:-${HOME}/Applications/OpenMM/${VERSION}}
VENV_PREFIX=${VENV_PREFIX:-${HOME}/Applications/OpenMM}

SRC_ARCHIVE=${SRC_ARCHIVE:-}

rm -rf ${VENV_PREFIX}/venv
virtualenv ${VENV_PREFIX}/venv
source ${VENV_PREFIX}/venv/bin/activate

pip install numpy

mkdir -p /dev/shm/$(whoami)/${NAME}

temp_dir=$(mktemp -d -p /dev/shm/$(whoami)/${NAME})

cd $temp_dir

wget $SRC_ARCHIVE

cd ${NAME}
git checkout ${VERSION}

mkdir build
cd build
cmake .. -DCMAKE_INSTALL_PREFIX=${INSTALL_PREFIX}

make 
make install
make PythonInstall

rm -rf $temp_dir
